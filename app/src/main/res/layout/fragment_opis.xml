<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragopis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp">

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:format12Hour="hh:mm"
        android:format24Hour="dd MMMM yyyy"
        android:text="TextClock"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editFioClient"
        android:layout_alignStart="@+id/editFioClient"
        android:layout_alignLeft="@+id/editFioClient"
        android:layout_marginBottom="18dp"
        android:text="ФИО заказчика"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editFioClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/editPrice"
        android:layout_alignLeft="@+id/editPrice"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:inputType="textCapWords"
        android:selectAllOnFocus="true"
        android:text="ФИО"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editPrice"
        android:layout_alignStart="@+id/editPrice"
        android:layout_alignLeft="@+id/editPrice"
        android:layout_marginBottom="19dp"
        android:text="Цена ₽/м³"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPrice"
        android:layout_alignStart="@+id/editPrice"
        android:layout_alignLeft="@+id/editPrice"
        android:layout_marginTop="20dp"
        android:text="Тип дерева"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTipDereva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_marginTop="16dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Например, сосна"
        android:inputType="textCapWords"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#2C2C2C" />

    <Button
        android:id="@+id/saveOpis"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTipDereva"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="67dp"
        android:background="@drawable/style_button"
        android:text="Запомнить"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>